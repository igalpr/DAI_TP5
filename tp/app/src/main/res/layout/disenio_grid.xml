<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:columnWidth="120sp"
    android:numColumns="auto_fit"
    android:orientation="vertical"
    android:verticalSpacing="10sp"
    android:horizontalSpacing="10sp"
    android:gravity="start">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="10sp"
        app:cardElevation="8sp"
        app:cardCornerRadius="8sp">


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/PosterPelicula"
            android:layout_marginStart="10sp"
            android:contentDescription="@string/poster_de_la_pelicula" />
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold|italic"
            android:paddingTop="10sp"
            app:layout_constraintTop_toBottomOf="@+id/PosterPelicula"
            android:layout_marginTop="5sp"
            android:layout_marginStart="30sp"
            app:layout_constraintLeft_toLeftOf="@id/PosterPelicula"
            app:layout_constraintRight_toRightOf="@id/PosterPelicula"
            android:id="@+id/TituloPelicula"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintTop_toBottomOf="@id/TituloPelicula"
            app:layout_constraintLeft_toLeftOf="@id/TituloPelicula"
            android:id="@+id/AÃ±oDeSalida"/>

    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</GridLayout>