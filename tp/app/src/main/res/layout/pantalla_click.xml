<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.AppCompatImageView
    android:layout_width="250sp"
    android:layout_height="250sp"
    android:layout_marginTop="15sp"
    android:id="@+id/PosterPeliculaEspecial"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="15sp"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="25sp"
    android:textColor="#ff8000"
    app:layout_constraintTop_toTopOf="@+id/PosterPeliculaEspecial"
    app:layout_constraintLeft_toRightOf="@+id/PosterPeliculaEspecial"
        android:layout_marginStart="10sp"
    android:text="rated de la pelicula"
    android:id="@+id/Rated"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginRight="5sp"
        app:layout_constraintTop_toBottomOf="@+id/PosterPeliculaEspecial"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/PosterPeliculaEspecial"
        android:text="Titulo de la pelicula"
        android:id="@+id/TituloPeliculaEspecial"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/TituloPeliculaEspecial"
        app:layout_constraintLeft_toLeftOf="@id/PosterPeliculaEspecial"
        android:layout_marginRight="8sp"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Fecha de estreno y duracion, director, y awards"
        android:id="@+id/DetallePeliculaEspecial"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/DetallePeliculaEspecial"
        app:layout_constraintLeft_toLeftOf="@id/PosterPeliculaEspecial"
        android:layout_marginRight="8sp"
        android:text="Fecha de estreno y duracion, director, y awards"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/RepartoPeliculaEspecial"/>


</android.support.constraint.ConstraintLayout>